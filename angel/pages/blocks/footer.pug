mixin footer(logotype)
  footer.footer(id="footer")
    .container
      .footer__top
        .logo__wrap
          if logotype == "a"
            #{logotype}.logo(href="index.html")
              svg
                use(xlink:href="img/svg/sprite.svg#logo1")
          else
            #{logotype}.logo
              svg
                use(xlink:href="img/svg/sprite.svg#logo1")

      // /.footer__top
    // /.container

    .footer__bottom
      .container
        .footer__bottom-df
          .footer__politics
            a.text(href="#") Политика конфиденциальности

          .footer__copyright
            p.text г. Симферополь © Copyright  2021&nbsp;г.

          a.made(href="https://sheer82.ru/")
            span.text Сделано в
            svg.icon
              use(xlink:href='img/svg/sprite.svg#iconSheer')

        // /.row
      // /.container
    // /.footer__bottom
  // /.footer

