mixin modal__callback()
  section.modal.modal__callback(id="modal__callback")
    .modal__content
      button.close

      .form.form--general.form--main.form--blue.wpcf7
        p.form__title Обратный звонок

        form.wpcf7-form
          .form__item
            span.wpcf7-form-control-wrap.your-name.text-input
              input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

          .form__item
            span.wpcf7-form-control-wrap.your-tel.text-input
              input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

          .form__item.form__item--submit
            .btn__wrap.btn__wrap--grad
              input.wpcf7-form-control.wpcf7-submit.btn(type='submit', value='Отправить')

          .form__item
            span.wpcf7-form-control-wrap.accept
              span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                span.wpcf7-list-item
                  label
                    input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                    span.wpcf7-list-item-label Согласие на обработку персональных данных
                      i.accept__icon

      // /. form
    // /. modal__content
  // /. modal

