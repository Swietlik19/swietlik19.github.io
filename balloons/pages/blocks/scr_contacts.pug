mixin scr_contacts()
  section.scr_contacts.contacts(id="scr_contacts")
    .container
      .contacts__cont
        .page-top.page-top--second
          .page-top__menu
            button(type="button") все категории товаров
            ul
              li

          .page-top__search
            .form.form--search
              form.wpcf7-form
                .search-wrap
                  .text-input
                    input(type='search', placeholder='Поиск по каталогу')
                  button(type='submit')
                    svg.icon
                      use(xlink:href='img/svg/sprite.svg#icon-search')

          .page-top__total
            a.page-top__cart.open-modal(href="#")
              svg.icon
                use(xlink:href="img/svg/sprite.svg#icon-cart")

              .page-top__cart-sum 0

            .page-top__sum Итого:
              strong  250 Р

        .contacts__wrap
          .contacts__df
            .contacts__content
              h1.title--second Контакты

              ul.contacts__list
                li.contacts__item
                  .contacts__icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-cont-1")
                  .contacts__text
                    p
                      strong Адрес:
                      br
                      |  г. Симферополь, ул. Севастопольская, 31
                      br
                      span  (база мясокомбината)

                li.contacts__item
                  .contacts__icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-cont-2")
                  .contacts__text
                    p
                      strong E-mail:
                      a(href="mailto:sharodei_shar@mail.ru" rel="nofollow")  &nbsp;sharodei_shar@mail.ru

                li.contacts__item
                  .contacts__icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-cont-3")
                  .contacts__text
                    p
                      strong Телефоны:
                    .contacts__phones
                      .contacts__phone
                        a(href="tel:+79789224242" rel="nofollow")
                          strong +7 (978) 922 42 42
                        span  (По Крыму)

                        .header__phones-msgs
                          a.header__phones-msg.header__phones-msg--wa(href="https://api.whatsapp.com/send?phone=89789224242" rel="nofollow")
                            svg.icon
                              use(xlink:href="img/svg/sprite.svg#icon-wa")

                          a.header__phones-msg.header__phones-msg--viber(href="viber://chat?number=89789224242" rel="nofollow")
                            svg.icon
                              use(xlink:href="img/svg/sprite.svg#icon-viber")

                      .contacts__phone
                        a(href="tel:88000000000" rel="nofollow")
                          strong 8 (800) 00 00 000
                        span  (Бесплатно по России)

                li.contacts__item
                  .contacts__icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-cont-4")
                  .contacts__text
                    p
                      strong График работы:
                      br
                      |  пн - пт с 9:00 до 18:00
                      br
                      |  суббота с 9:00 до 17:00


              .contacts__socials
                p.contacts__socials-title Соцсети:
                +socials--contacts

            .contacts__media
              a.contacts__media-item.fancybox(href="img/contacts-img.jpg")
                noscript
                  img.lazy(src="img/contacts-img.jpg" alt="" width="125" height="90" data-object-fit-cover)
                img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img/contacts-img.jpg" alt="" width="125" height="90" data-object-fit-cover)
              a.contacts__media-item.contacts__media-item--video.fancybox(href="https://www.youtube.com/embed/atpnSRhv_f0?controls=1&amp;showinfo=0&amp;autoplay=1&amp;loop=1&amp;playlist=atpnSRhv_f0" data-fancybox-type="iframe")
                noscript
                  img.lazy(src="img/contacts-img.jpg" alt="" width="125" height="90" data-object-fit-cover)
                img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img/contacts-img.jpg" alt="" width="125" height="90" data-object-fit-cover)
                i.btn.btn--circle.play

                .contacts__media-title
                  span Как проехать?


            .contacts__form
              .form.form--general.form--main.form--blue.wpcf7
                p.form__title Обратная связь

                form.wpcf7-form
                  .form__item
                    span.wpcf7-form-control-wrap.your-name.text-input
                      input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                  .form__item
                    span.wpcf7-form-control-wrap.your-tel.text-input
                      input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

                  .form__item
                    span.wpcf7-form-control-wrap.your-message.text-input
                      textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false', placeholder="Сообщение")

                  .form__item.form__item--submit
                    .btn__wrap.btn__wrap--grad
                      input.wpcf7-form-control.wpcf7-submit.btn(type='submit', value='Отправить')

                  .form__item
                    span.wpcf7-form-control-wrap.accept
                      span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                        span.wpcf7-list-item
                          label
                            input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                            span.wpcf7-list-item-label Согласие на обработку персональных данных
                              i.accept__icon



    .contacts__map#contacts__map





  // /.scr_contacts
