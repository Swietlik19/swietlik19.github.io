mixin scr_prod-item()
  section.scr_prod-item.prod-item(id="scr_prod-item")
    .container
      +breadcrumbs--prod-item

      .prod-item__df
        .prod-item__left
          .prod-item__thumbs-wrap
            button.swiper-button-next

            .prod-item__thumbs#prod-item__thumbs
              .swiper-wrapper
                .swiper-slide
                  .prod-item__thumb
                    noscript
                      img.lazy(src="img-temp/prod-item-img.jpg" alt="" width="125" height="90" data-object-fit-contain)
                    img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod-item-img.jpg" alt="" width="125" height="90" data-object-fit-contain)
                .swiper-slide
                  .prod-item__thumb
                    noscript
                      img.lazy(src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)
                    img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)
                .swiper-slide
                  .prod-item__thumb
                    noscript
                      img.lazy(src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)
                    img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)

            button.swiper-button-prev

          .prod-item__gallery#prod-item__gallery
            .swiper-wrapper
              .swiper-slide
                a.prod-item__img.fancybox(href="img-temp/prod-item-img.jpg")
                  noscript
                    img.lazy(src="img-temp/prod-item-img.jpg" alt="" width="125" height="90" data-object-fit-contain)
                  img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod-item-img.jpg" alt="" width="125" height="90" data-object-fit-contain)
              .swiper-slide
                a.prod-item__img.fancybox(href="img-temp/prod-item-img-2.jpg")
                  noscript
                    img.lazy(src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)
                  img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)
              .swiper-slide
                a.prod-item__img.fancybox(href="img-temp/prod-item-img-2.jpg")
                  noscript
                    img.lazy(src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)
                  img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod-item-img-2.jpg" alt="" width="125" height="90" data-object-fit-contain)


        .prod-item__right
          h1.prod-item__title bergamo wrinkle care caviar cream
          .prod-item__desc
            p Антивозрастной крем с черной икрой

          .prod-item__right-df
            .prod-item__content
              .prod-item__info
                .prod-item__table
                  table
                    tr
                      td Артикул:
                      td 91

                span.prod-item__status В наличии

              .prod-item__info
                .prod-item__table
                  table
                    tr
                      td Бренд:
                      td
                        b.blue Bergamo
                    tr
                      td Объем:
                      td
                        b 50 мл
                    tr
                      td Категории:
                      td
                        b Крем для лица для зрелой кожи
                    tr
                      td Проблемы:
                      td
                        b Морщины

              .prod-item__bottom
                .prod__prices
                  b.prod__price.prod__price--new 710 Р
                  b.prod__price.prod__price--old 1 500 Р


            ul.prod-item__feat
              li
                span.prod-item__feat-icon
                  img(src="img/svg/icons/prod-feat-1.svg" alt="")

                .prod-item__feat-text
                  p
                    strong бонусы
                  p вернем 5% от покупки на ваш бонусный счет
              li
                span.prod-item__feat-icon
                  img(src="img/svg/icons/prod-feat-2.svg" alt="")

