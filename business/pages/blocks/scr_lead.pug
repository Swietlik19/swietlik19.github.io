mixin scr_lead()
  section.scr_lead.lead.grey-bg(id="scr_lead")
    .container
      .row
        .col-md-6.col-lg-5.col-sm-5
          .lead__content
            .bg-img
              noscript
                img.lazy(src="img/svg/img-lead.svg" alt="" width="443" height="409")
              img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img/svg/img-lead.svg" alt="" width="443" height="409")
            p.lead__title Заполните форму и получите консультацию
              strong  бесплатно
            p.lead__desc Мы ответим на ваши вопросы, произведем
              br
              |  расчет стоимости услуг и подготовим
              br
              |  индивидуальное коммерческое предложение
        .col-lg-4.offset-lg-3.col-md-5.offset-md-1.col-sm-7
          .lead__form
            .form.wpcf7
              form.wpcf7-form
                .form__item
                  span.wpcf7-form-control-wrap.your-name.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')

                .form__item
                  span.wpcf7-form-control-wrap.your-tel.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Номер телефона')

                .form__item
                  span.wpcf7-form-control-wrap.your-email.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваш e-mail')

                .form__item
                  .submit__wrap
                    input.wpcf7-form-control.wpcf7-submit(type='submit', value='Получить консультацию')

                .form__item
                  span.wpcf7-form-control-wrap.accept
                    span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                      span.wpcf7-list-item
                        label
                          input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                          span.wpcf7-list-item-label Согласие на обработку персональных данных
                            i.accept__icon
  // /.scr_lead
