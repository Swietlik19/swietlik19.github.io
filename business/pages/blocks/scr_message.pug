mixin scr_message(messageTitle)
  section.scr_message.message.grey-bg(id="scr_message")
    .container
      .form.wpcf7
        .bg-img
          noscript
            img.lazy(src="img/svg/img-message.svg" alt="Девушка" width="322" height="330")
          img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img/svg/img-message.svg" alt="Девушка" width="322" height="330")
        .bg-img-2
          img(src="img/img-message-2.png" alt="Тень" width="493" height="61")
        form.wpcf7-form
          .form__title #{messageTitle}

          .form__top
            .left
              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Номер телефона')
            .right
              .form__item
                span.wpcf7-form-control-wrap.your-review.textarea-input.text-input
                  textarea#review.wpcf7-form-control.wpcf7-textarea(name='your-review', cols='40', rows='10', aria-invalid='false', placeholder='Ваше сообщение')

          .form__bottom
            .left
              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon
            .right
              .form__item
                .submit__wrap
                  input.wpcf7-form-control.wpcf7-submit.btn--grad(type='submit', value='Отправить')

  // /.scr_message
