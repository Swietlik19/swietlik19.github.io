mixin header(logotype)
  header.header(id="header")
    .header__menu
      .container
        .header__menu-wrap
          ul.menu
            li.menu-item
              a(href="#") О компании
            li.menu-item
              a(href="#") Прайс
            li.menu-item
              a(href="#") Наши проекты
            li.menu-item
              a(href="#") Отзывы
            li.menu-item
              a(href="#") Вопрос-ответ
            li.menu-item
              a(href="#") Блог
            li.menu-item
              a(href="#") Контакты

          ul.menu
            li.menu-item
              a(href="#") Услуги
              ul.sub-menu
                li.menu-item
                  a(href="#") Разработка антикризисных программ
                li.menu-item
                  a(href="#") Разработка инвестиционных проектов
                li.menu-item
                  a(href="#") Разработка бизнес-планов
                li.menu-item
                  a(href="#") Финансовый анализ и оценка бизнеса
                li.menu-item
                  a(href="#") Финансовый директор в "аренду"
                li.menu-item
                  a(href="#") Постановка управленческого учета,
                    br
                    |  оптимизация затрат

          .header__form
            .form.form--general.wpcf7
              form.wpcf7-form

                p.form__title Заполните форму
                  br
                  |  и мы свяжемся с Вами
                  br
                  |  в ближайшее время

                .form__item
                  span.wpcf7-form-control-wrap.your-name.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                .form__item
                  span.wpcf7-form-control-wrap.your-tel.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

                .form__item
                  span.wpcf7-form-control-wrap.your-email.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='E-mail')

                .form__item.form__item--submit
                  .btn__wrap.btn__wrap--grad
                    input.wpcf7-form-control.wpcf7-submit.btn(type='submit', value='Заказать консультацию')

                .form__item
                  span.wpcf7-form-control-wrap.accept
                    span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                      span.wpcf7-list-item
                        label
                          input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                          span.wpcf7-list-item-label Согласие на обработку персональных данных
                            i.accept__icon


    .container
      .header__wrap
        button.burger
          span.burger__wrap
            span.line

        .logo__wrap
          if logotype == "a"
            #{logotype}.logo(href="index.html")
              img(src="img/svg/logo.svg" alt="лого")
          else
            #{logotype}.logo
              img(src="img/svg/logo.svg" alt="лого")

          p.logo__text Финансовый
            br
            |  и инвестиционный
            br
            |  консалтинг

        .header__right
          .header__time
            p Время работы:
              br
              |  пн – пт с 9:00 - 18:00

          .header__phones
            a.btn.btn--circle.open-modal.desktop(href="#modal__callback")
              i.fa.fa-phone
            a.btn.btn--circle.mobile(href="tel:+79780567654" rel="nofollow")
              i.fa.fa-phone

            .header__phones-links
              a.header__phone(href="tel:+79780567654" rel="nofollow") +7 (978) 056-76-54
              a.header__phone(href="tel:+79139678118" rel="nofollow") +7 (913)
                span  967-81-18


      // /.header__wrap
    // /.container

