doctype html
html(lang='ru')
  head
    meta(charset="UTF-8")

    title  |

    meta(name='description', content='')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='format-detection', content='telephone=no')

    // Template Basic Images Start
    //- link(rel='icon', sizes='32x32', href='img/favicon/favicon-32x32.png')
    //- link(rel='icon', sizes='16x16', href='img/favicon/favicon-16x16.png')
    // Template Basic Images End

    // Custom Browsers Color Start
    meta(name='theme-color', content='#daa976')
    // Custom Browsers Color End

    include blocks/scripts.pug
    include blocks/script-map.pug
    include blocks/styles.pug
    include blocks/header.pug
    include blocks/socials.pug

    include blocks/scr_about.pug
    include blocks/scr_feat.pug
    include blocks/scr_lic.pug
    include blocks/scr_faq.pug
    include blocks/scr_about.pug
    include blocks/scr_insta.pug

    include blocks/footer.pug
    include blocks/socials.pug

    +styles

  body
    svg(style='visibility:hidden; width: 0; height: 0; position: absolute;')
      style(type='text/css').
        .st0{filter:url(#Filter_0);}
        .st1{fill:#FFFFFF;}
      filter#Filter_0(filterunits='userSpaceOnUse', height='722px', width='523px', x='0px', y='0px')
        feoffset(in='SourceAlpha', dx='0', dy='7')
        fegaussianblur(result='blurOut', stddeviation='5.477')
        feflood(flood-color='rgb(185, 175, 165)', result='floodOut')
        fecomposite(in='floodOut', in2='blurOut', operator='atop')
        fecomponenttransfer
          fefunca(slope='0.2', type='linear')
        femerge
          femergenode
          femergenode(in='SourceGraphic')
      filter#Filter_1(filterunits='userSpaceOnUse', x='0px', y='0px', width='980px', height='506px')
        feoffset(in='SourceAlpha', dx='0', dy='7')
        fegaussianblur(result='blurOut', stddeviation='5.477')
        feflood(flood-color='rgb(185, 175, 165)', result='floodOut')
        fecomposite(operator='atop', in='floodOut', in2='blurOut')
        fecomponenttransfer
          fefunca(type='linear', slope='0.2')
        femerge
          femergenode
          femergenode(in='SourceGraphic')

    //. На внутренних прелоадер не нужен

    +header("a")

    #page_wr.page_wr

      +scr_about
      +scr_feat
      .page-sections
        .container
          h2.page-title Документы и лицензии клиники
          .page-desc
            p Полный пакет документов компании, а также сертификаты и лицензии, подтверждающие профессиональные компетенции наших специалистов
          .page-df
            +scr_certs
            +scr_faq
      +scr_insta


      a.to-top(href="#page_wr")
        svg.icon
          use(xlink:href="img/svg/sprite.svg#arrow")

    +footer("a")

    +scripts
    +script-map
