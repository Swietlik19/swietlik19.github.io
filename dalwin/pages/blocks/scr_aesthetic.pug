                  tr
                    td
                      a(href="#") Омолодить лицо
                    td 15
                    td +30
                  tr
                    td
                      a(href="#") Избавиться от прыщей
                    td 7
                    td +15
                  tr
                    td
                      a(href="#") Решить проблему сухой кожи
                    td 3
                    td +15
                  tr
                    td
                      a(href="#") Решить проблемы сухой кожи
                    td 3
                    td +15
                  tr
                    td
                      a(href="#") Убрать второй подбородок
                    td 1
                    td +20
                  tr
                    td
                      a(href="#") Удалить морщины в уголках глаз
                    td 3
                    td +35

  // /.scr_aesthetic
