mixin scr_reviews()
  section.scr_reviews.reviews(id="scr_reviews")
    .container
      h2.page-title Отзывы о клинике Dalwin

      .reviews__df
        .reviews__col
          .reviews__link-wrap
            a.reviews__link(href="#")
              svg.icon(viewbox='0 0 440.8 440.8', xmlns='http://www.w3.org/2000/svg')
                radialgradient#da(cx='14.115', cy='465.452', r='589.454', gradientunits='userSpaceOnUse')
