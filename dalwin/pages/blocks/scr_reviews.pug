                  stop(offset='.327', stop-color='#f2203e')
                  stop(offset='.648', stop-color='#b729a8')
                  stop(offset='1', stop-color='#5342d6')
                path(d='M306.7 425.4H129.1c-64.7 0-117.3-52.6-117.3-117.3V130.5c0-64.7 52.6-117.3 117.3-117.3h177.6c64.7 0 117.3 52.6 117.3 117.3v177.6c0 64.7-52.6 117.3-117.3 117.3zM129.1 48.6c-45.2 0-82 36.8-82 82v177.6c0 45.2 36.8 82 82 82h177.6c45.2 0 82-36.8 82-82V130.5c0-45.2-36.8-82-82-82H129.1z', fill='url(#da)')
