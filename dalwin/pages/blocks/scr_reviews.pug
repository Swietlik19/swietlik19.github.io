          .reviews__wrap
            .reviews__slider#reviews__slider-0
              .swiper-wrapper
                .swiper-slide
                  a.reviews__item.link-watch.reviews__item--img.fancybox(href="img-temp/insta-img.jpg" data-fancybox-group="reviews-insta")
                    img(src="img-temp/insta-img.jpg" alt="" data-object-fit-cover)
                .swiper-slide
                  a.reviews__item.link-watch.reviews__item--img.fancybox(href="img-temp/insta-img.jpg" data-fancybox-group="reviews-insta")
                    img(src="img-temp/insta-img.jpg" alt="" data-object-fit-cover)

            .reviews__slider-nav.swiper-slider-nav
              button.swiper-button-prev
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")
              .swiper-dots
              button.swiper-button-next
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")

        .reviews__col
          .reviews__link-wrap
            a.reviews__link.reviews__link--yt(href="#")
              svg.icon
                use(xlink:href="img/svg/sprite.svg#yt")

          .reviews__wrap
            .reviews__slider#reviews__slider-1
              .swiper-wrapper
                .swiper-slide
                  a.reviews__item.link-watch.link-watch--video.reviews__item--video.fancybox(href="https://www.youtube.com/embed/atpnSRhv_f0?controls=1&amp;showinfo=0&amp;autoplay=1&amp;loop=1&amp;playlist=atpnSRhv_f0" data-fancybox-type="iframe")
                    span.btn__wrap.btn__wrap--grad
                      span.xbtn.xbtn--grad.xbtn--circle
                        svg.icon
                          use(xlink:href="img/svg/sprite.svg#play")
                    img(src="img-temp/yt-img.jpg" alt="" data-object-fit-cover)
                .swiper-slide
                  a.reviews__item.link-watch.link-watch--video.reviews__item--video.fancybox(href="https://www.youtube.com/embed/atpnSRhv_f0?controls=1&amp;showinfo=0&amp;autoplay=1&amp;loop=1&amp;playlist=atpnSRhv_f0" data-fancybox-type="iframe")
                    span.btn__wrap.btn__wrap--grad
                      span.xbtn.xbtn--grad.xbtn--circle
                        svg.icon
                          use(xlink:href="img/svg/sprite.svg#play")
                    img(src="img-temp/yt-img.jpg" alt="" data-object-fit-cover)


            .reviews__slider-nav.swiper-slider-nav
              button.swiper-button-prev
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")
              .swiper-dots
              button.swiper-button-next
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#arrow")


  // /.scr_reviews
