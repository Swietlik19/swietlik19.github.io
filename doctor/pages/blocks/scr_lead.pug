mixin scr_lead()
  section.scr_lead.lead(id="scr_lead")
    .container
      p.lead__title Запишитесь на консультацию

      .lead__form
        .form.wpcf7
          form.wpcf7-form
            .form__df
              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ф.И.О.')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#iconMan")

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Номер телефона')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#iconPhone")

              .form__item
                span.wpcf7-form-control-wrap.your-date.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-date(type='text', name='your-date', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Дата, время')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#iconDate")

            .form__item.form__item--submit
              .btn__wrap
                input.wpcf7-form-control.wpcf7-submit.btn.btn--orange(type='submit', value='Записаться на консультацию')

            .form__item
              span.wpcf7-form-control-wrap.accept
                span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                  span.wpcf7-list-item
                    label
                      input(type='checkbox', name='accept', value='Даю согласие на обработку персональных данных', checked='checked')
                      span.wpcf7-list-item-label Даю согласие на обработку персональных данных
                        i.accept__icon

// /.scr_lead

mixin scr_lead--posts()
  section.scr_lead.lead.lead--posts(id="scr_lead")
    .container
      p.lead__title Задать вопрос

      .lead__form
        .form.wpcf7
          form.wpcf7-form
            .form__df--two-cols
              .form__col
                .form__item
                  span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ф.И.О.')
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#iconMan")

                .form__item
                  span.wpcf7-form-control-wrap.your-email.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='E-mail')
                    i.input-icon
                      img(src="img/svg/iconMail.svg" alt="иконка")

              .form__col
                .form__item
                  span.wpcf7-form-control-wrap.your-message.text-input.text-input--icon
                    label(for="your-msg")
                      i.input-icon
                        svg.icon
                          use(xlink:href="img/svg/sprite.svg#iconMsg")
                      span.text Ваше сообщение
                    textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false')

            .form__item.form__item--submit
              .btn__wrap
                input.wpcf7-form-control.wpcf7-submit.btn.btn--orange(type='submit', value='Отправить')

            .form__item
              span.wpcf7-form-control-wrap.accept
                span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                  span.wpcf7-list-item
                    label
                      input(type='checkbox', name='accept', value='Даю согласие на обработку персональных данных', checked='checked')
                      span.wpcf7-list-item-label Даю согласие на обработку персональных данных
                        i.accept__icon

// /.scr_lead
