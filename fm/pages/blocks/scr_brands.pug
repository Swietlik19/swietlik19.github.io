mixin scr_brands()
  section.scr_brands.brands(id="scr_brands")
    .container
      .section-top
        h2.page-title Популярные бренды
        a.xlink(href="#") Все магазины

      .brands__wrap
        .brands__slider#brands__slider
          .swiper-wrapper
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-1.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-2.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-3.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-4.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-1.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-2.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-3.jpg" alt="" data-object-fit-contain)
            .swiper-slide
              .brands__item
                img(src="img-temp/brands/img-4.jpg" alt="" data-object-fit-contain)

        .brands__slider-btns
          button.swiper-button-prev
            svg.icon
              use(xlink:href="img/svg/sprite.svg#arrow")
          .swiper-dots
          button.swiper-button-next
            svg.icon
              use(xlink:href="img/svg/sprite.svg#arrow")

  // /.scr_brands
