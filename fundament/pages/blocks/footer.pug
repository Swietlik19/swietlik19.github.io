      .footer__top
        .footer__col
          .logo__wrap
            if logotype == "a"
              #{logotype}.logo(href="index.html")
                img(src="img/logo.png" alt="лого")
            else
              #{logotype}.logo
                img(src="img/logo.png" alt="лого")
            span.logo__text Пассажирские перевозки
              br
              |  и экскурсии на заказ в Крыму

        .footer__col
          ul.menu
