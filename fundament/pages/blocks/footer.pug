            li.menu-item
              a(href="#") Блог

        .footer__col
          .footer__links
            .footer__phones
              a.footer__phone(href="tel:+79787690479" rel="nofollow") +7 (978) 769-04-79
              a.footer__phone(href="tel:+73652538230" rel="nofollow") +7 (3652) 53-82-30

