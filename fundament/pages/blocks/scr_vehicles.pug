          li
            a(href="#vehicles__tab-1") Автобусы на 35 мест
          li
            a(href="#vehicles__tab-2") Автобусы на 50 мест
          li
            a(href="#vehicles__tab-3") Автобусы на 55 мест

        ul.vehicles__tabs
          li.vehicles__tab#vehicles__tab-0
            .vehicles__wrap

              //. У каждого слайдера свой ID (меняется цифра в месте "tab-" (в зависимости от номера таба) и "slider-")
              .vehicles__slider#vehicles__tab-0-slider-0
                .swiper-wrapper
                  .swiper-slide
                    .vehicles__item.decor-wrap
                      .vehicles__gallery

                        //. У каждого слайдера свой ID (меняется цифра)
                        .vehicles__gallery-slider#vehicles__gallery-slider-0
                          .swiper-wrapper
                            .swiper-slide
                              a.vehicles__gallery-img.fancybox(href="img-temp/vehicles-img.jpg")
                                img(src="img-temp/vehicles-img.jpg" alt="" data-object-fit-cover)
                            .swiper-slide
                              a.vehicles__gallery-img.fancybox(href="img-temp/vehicles-img.jpg")
                                img(src="img-temp/blog-img.jpg" alt="" data-object-fit-cover)
                            .swiper-slide
                              a.vehicles__gallery-img.fancybox(href="img-temp/vehicles-img.jpg")
                                img(src="img-temp/blog-img.jpg" alt="" data-object-fit-cover)
                            .swiper-slide
                              a.vehicles__gallery-img.fancybox(href="img-temp/vehicles-img.jpg")
