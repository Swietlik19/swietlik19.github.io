        .form__decor-st{fill:#FFFFFF;}

    +header("div")

    #page_wr.page_wr
      +scr1
      +scr_types
      +scr_tours
      +scr_lead
      +scr_vehicles
      +scr_clients
      +scr_feat
      +scr_steps
      +scr_certs
      +scr_blog
      +scr_map


      a.to-top(href="#page_wr")
