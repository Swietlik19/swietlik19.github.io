mixin modal__login()
  section.modal.modal__login.login(id="modal-login")
    .modal-login__content.modal__content
      button.close

      .form.wpcf7.form--general.form--modal
        form.wpcf7-form

          ul.login__nav
            li.login__nav-item
              a.login__nav-link.active(href="#login-tabs-0") Войти
            li.login__nav-item
              a.login__nav-link(href="#login-tabs-1") Зарегистрироваться

          .login__tabs
            .login__tab.active#login-tabs-0

              .login__via
                span.text Войти через
                +socials--modal

              .login__inputs
                .form__item
                  span.wpcf7-form-control-wrap.your-email.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='E-mail')
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-email")

                .form__item
                  span.wpcf7-form-control-wrap.your-password.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-pass(type='password', name='your-pass', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Пароль')
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-pass")

                .form__item.form__item--submit
                  input.wpcf7-form-control.wpcf7-submit.btn.btn--green(type='submit', value='Войти')

                a.login__forget(href="#") Забыли пароль

            .login__tab#login-tabs-1
              .login__via
                span.text Зарегистрироваться через
                +socials--modal2

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-user")

              .form__item
                span.wpcf7-form-control-wrap.your-email.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Email')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-email")

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваш телефон')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-tel")

              .form__item
                span.wpcf7-form-control-wrap.your-password.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-pass(type='password', name='your-pass', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Пароль')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-pass")

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon

              .form__item.form__item--submit
                input.wpcf7-form-control.wpcf7-submit.btn.btn--green(type='submit', value='Зарегистрироваться')

      // /. form
    // /. login__content
  // /. modal__login
