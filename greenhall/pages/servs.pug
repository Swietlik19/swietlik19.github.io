doctype html
html(lang='ru')
  head
    meta(charset="UTF-8")

    title  |

    meta(name='description', content='')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='format-detection', content='telephone=no')

    // Template Basic Images Start
    //- link(rel='icon', sizes='32x32', href='img/favicon/favicon-32x32.png')
    //- link(rel='icon', sizes='16x16', href='img/favicon/favicon-16x16.png')
    // Template Basic Images End

    // Custom Browsers Color Start
    meta(name='theme-color', content='#094b53')
    // Custom Browsers Color End

    include blocks/scripts.pug
    include blocks/styles.pug
    include blocks/header.pug
    include blocks/breadcrumbs.pug
    include blocks/socials.pug
    include blocks/paginator.pug

    include blocks/scr_servs.pug
    include blocks/scr_cases.pug
    include blocks/scr_lead.pug

    include blocks/footer.pug
    include blocks/socials.pug

    +styles

  body

    svg(style='visibility:hidden; width: 0; height: 0; position: absolute;')
      style(type='text/css').
        .st0{filter:url(#Filter_0);}
        .st1{fill:#FFFFFF;}
      filter#Filter_0(filterunits='userSpaceOnUse', height='722px', width='523px', x='0px', y='0px')
        feoffset(dx='0', dy='20', in='SourceAlpha')
        fegaussianblur(result='blurOut', stddeviation='5.916')
        feflood(flood-color='rgb(215, 212, 212)', result='floodOut')
        fecomposite(in='floodOut', in2='blurOut', operator='atop')
        fecomponenttransfer
          fefunca(slope='0.4', type='linear')
        femerge
          femergenode
          femergenode(in='SourceGraphic')

    ul.page__links
      li
        .page__links-icon
          img(src="img/svg/icons/apts.svg" alt="")
        a.page__links-text(href="#") апартаменты
      li
        .page__links-icon
          img(src="img/svg/icons/pin-blue.svg" alt="")
        a.page__links-text(href="#") адрес
      li
        .page__links-icon
          img(src="img/svg/icons/rotate-camera-blue.svg" alt="")
        a.page__links-text(href="#") 3d тур


    +header("div")

    #page_wr.page_wr
      +scr_servs
      +scr_cases--servs
      +scr_lead--servs

      a.to-top(href="#page_wr")
        svg.icon
          use(xlink:href="img/svg/sprite.svg#arrow")

    +footer("div")

    +scripts
