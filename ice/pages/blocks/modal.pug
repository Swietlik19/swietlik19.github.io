mixin modal__reviews()
  section.modal.modal__reviews(id="modal__reviews")
    .modal-reviews__content.modal__content
      button.close

      .form.wpcf7
        form.wpcf7-form

          .form__item
            span.wpcf7-form-control-wrap.your-name.text-input
              input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')

          .form__item
            span.wpcf7-form-control-wrap.your-review.textarea-input.text-input
              textarea#review.wpcf7-form-control.wpcf7-textarea(name='your-review', cols='40', rows='10', aria-invalid='false', placeholder='Ваш вопрос')

          .form__item
            span.wpcf7-form-control-wrap.accept
              span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                span.wpcf7-list-item
                  label
                    input(type='checkbox', name='accept', value='Я согласен с политикой конфиденциальности', checked='checked')
                    span.wpcf7-list-item-label Я согласен с политикой конфиденциальности
                      i.accept__icon

          .form__item.form__item--submit
            input.wpcf7-form-control.wpcf7-submit.btn--grad(type='submit', value='Отправить')

      // /. form
    // /. modal__content
  // /. modal
