mixin scr_categories()
  section.scr_categories.categories.blue-bg(id="scr_categories")
    .container
      h2.page-title Предоставляем полный перечень услуг «под ключ»

      .categories__wrap
        .categories__slider#categories__slider
          .swiper-wrapper
            .swiper-slide
              .categories__item
                .categories__img
                  img(src="img/serv/img-1.jpg" alt="" data-object-fit-cover)

                .categories__content
                  h3
                    a(href="#") Вентиляция и&nbsp;кондиционирование

                  ul
                    li
                      a(href="#") Приточно-вытяжная вентиляция
                    li
                      a(href="#") Промышленная вентиляция
                    li
                      a(href="#") Центральное кондиционирование
                    li
                      a(href="#") Система увлажнения воздуха
                    li
                      a(href="#") Рекупирация
                    li
                      a(href="#") Центральное кондиционирование
                    li
                      a(href="#") Система увлажнения воздуха
                    li
                      a(href="#") Рекупирация

            .swiper-slide
              .categories__item
                .categories__img
                  img(src="img/serv/img-2.jpg" alt="" data-object-fit-cover)

                .categories__content
                  h3
                    a(href="#") Водоснабжение и&nbsp;водоотведение

                  ul
                    li
                      a(href="#") Холодное водоснабжение
                    li
                      a(href="#") Горячее водоснабжение
                    li
                      a(href="#") Системы очистки воды
                    li
                      a(href="#") Ливневая канализация
                    li
                      a(href="#") Пожарная сигнализация

            .swiper-slide
              .categories__item
                .categories__img
                  img(src="img/serv/img-3.jpg" alt="" data-object-fit-cover)

                .categories__content
                  h3
                    a(href="#") Системы
                      br
                      |  электроснабжения

                  ul
                    li
                      a(href="#") Наружные и внутренние электро сети
                    li
                      a(href="#") Аварийное электроснабжение
                    li
                      a(href="#") Заземление и молниезащита
                    li
                      a(href="#") Электрические подстанции
                    li
                      a(href="#") Трансформаторные подстанции

            .swiper-slide
              .categories__item
                .categories__img
                  img(src="img/serv/img-4.jpg" alt="" data-object-fit-cover)

                .categories__content
                  h3
                    a(href="#") Слаботочные
                      br
                      |  системы

                  ul
                    li
                      a(href="#") Пожарная сигнализация
