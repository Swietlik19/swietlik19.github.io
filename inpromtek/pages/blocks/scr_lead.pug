mixin scr_lead()
  section.scr_lead.lead.blue-bg(id="scr_lead")
    .container
      .lead__df
        .lead__img
          img(src="img/lead-img.png" alt="")
        .lead__content
          h2.page-title Закажите
            strong  монтаж сейчас
            br
            |  и получите проект
            strong  в подарок!

          ul.lead__list
            li
              .lead__icon
                img(src="img/svg/icons/lead-1.svg" alt="")

              .lead__text
                p
                  b Мы реализуем задачи любой
                    br
                    |  сложности и объёма

                p От частных домов и коттеджей до магазинов, гипермаркетов и заводов

            li
              .lead__icon
                img(src="img/svg/icons/lead-2.svg" alt="")

              .lead__text
                p
                  b Выполним проектные работы
                    br
                    |  в течение 14 дней

                p Соблюдение сроков работ с гарантией по&nbsp;договору

        .lead__form
          .form.wpcf7
            form.wpcf7-form
              p.form__title Заполните форму
              p.form__desc и наш специалист свяжется с вами
                br
                |  в течение 60 секунд

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

              .form__item.form__item--submit
                .btn__wrap.btn__wrap--grad
                  input.wpcf7-form-control.wpcf7-submit.xbtn.xbtn--grad(type='submit', value='Получить консультацию')

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon

  // /.scr_lead
