mixin paginator()
  .pager.clear
    ul.page-numbers
      li
        a.prev.page-numbers(href='#')
          .page-numbers-icon
            svg.icon
              use(xlink:href="img/svg/sprite.svg#arrow")

          span.page-numbers-text Предыдущая страница

      li.current
        a.page-numbers(href='#') 1
      li
        span.page-numbers.current(aria-current="page") 2
      li
        a.page-numbers(href='#') 3

      li
        a.next.page-numbers(href='#')
          span.page-numbers-text Следующая страница

          .page-numbers-icon
            svg.icon
              use(xlink:href="img/svg/sprite.svg#arrow")

  // /.paginator

