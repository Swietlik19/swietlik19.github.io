mixin scr1()
  section.scr1(id="scr1")
    .bg-img
    .wr
      h1.title
        span
          span.num 1
          | -й
        |  завод по производству
        br
        span.ttu  сэндвич-панелей
        br
        |  в Крыму

      .btn__wrap
        a.btn.btn--red.btn--shadowed(href="#") Смотреть цены

      ul.sandwich-features
        li.sandwich-features__item
          h4.title--underlined Изготовление

          p.desc2 заказа любого размера,
            br
            |  цвета и объема

        li.sandwich-features__item
          h4.title--underlined Производство

          p.desc2 на современном
            br
            |  европейском оборудовании

        li.sandwich-features__item
          h4.title--underlined Доставка

          p.desc2 продукции по всему
            br
            |  Крыму

        li.sandwich-features__item
          h4.title--underlined Монтаж

          p.desc2 быстро, качественно
            br
            |  установим сэндвич-панели

      .form.wpcf7
        form.wpcf7-form

            p.form__title
              strong Оставьте заявку
              br
              |  на индивидуальный просчёт

            .form__item
              label
                span.label__text Как вас зовут?
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-user")

            .form__item
              label
                span.label__text Введите номер телефона
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Номер телефона')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-phone")

            .form__item
              input.wpcf7-form-control.wpcf7-submit.btn.btn--brown.btn--shadowed(type='submit', value='Получить просчёт')

            .form__item
              span.wpcf7-form-control-wrap.accept
                span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                  span.wpcf7-list-item
                    label
                      input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                      span.wpcf7-list-item-label Согласие на обработку персональных данных
                        i.accept__icon


  // /.scr1
