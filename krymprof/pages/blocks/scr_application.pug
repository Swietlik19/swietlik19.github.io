mixin scr_application()
  section.scr_application.application(id="scr_application")
    .wr
      h2.title2 что можно строить с помощью
        br
        |  сэндвич-панелей?

      .application__slider.slider1#application__slider
        .application__slides.slider1__slides
          .application__slide.slider1__slide.application__slide--big

            .application__item
              .application__img
                img(src="img/application/img-application-1.jpg", alt="МАФ", data-object-fit-cover)
              .application__content
                h3.application__title МАФ
                ul
                  li Киоски
                  li Вагончики
                  li Бытовки

          .application__slide.slider1__slide.application__slide--big

            .application__item
              .application__img
                img(src="img/application/img-application-2.jpg", alt="автофургоны", data-object-fit-cover)
              .application__content
                h3.application__title автофургоны
                ul
                  li Промышленные холодильники

          .application__slide.slider1__slide.application__slide

            .application__item
              .application__img
                img(src="img/application/img-application-3.jpg", alt="промышленные здания", data-object-fit-cover)
              .application__content
                h3.application__title промышленные здания
                ul
                  li Склады
                  li Ангары
                  li Цеха

          .application__slide.slider1__slide.application__slide

            .application__item
              .application__img
                img(src="img/application/img-application-4.jpg", alt="торговые здания", data-object-fit-cover)
              .application__content
                h3.application__title торговые здания
                ul
                  li Офисы
                  li Магазины
                  li ТРК

          .application__slide.slider1__slide.application__slide

            .application__item
              .application__img
                img(src="img/application/img-application-5.jpg", alt="авто комплексы", data-object-fit-cover)
              .application__content
                h3.application__title авто комплексы
                ul
                  li Заправки
                  li Мойки
                  li Сервисы

          .application__slide.slider1__slide.application__slide--big

            .application__item
              .application__img
                img(src="img/application/img-application-6.jpg", alt="спортивные сооружения", data-object-fit-cover)
              .application__content
                h3.application__title спортивные сооружения
                ul
                  li Спорт комплексы
                  li Ледовые дворцы

          .application__slide.slider1__slide.application__slide--big

            .application__item
              .application__img
                img(src="img/application/img-application-7.jpg", alt="с/х помещения", data-object-fit-cover)
              .application__content
                h3.application__title с/х помещения
                ul
                  li Фермы
                  li Склады
                  li С/Х комплексы

        .application__dots.slider1__dots

  // /.scr_application
