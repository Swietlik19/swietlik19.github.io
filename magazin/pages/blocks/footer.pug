mixin footer(logotype)
  footer.footer.grey-bg(id="footer")
    .container
      .footer__top
        .footer__info
          .logo__wrap
            if logotype == "a"
              #{logotype}.logo(href="index.html")
                img(src="img/logo.png", alt="")
            else
              #{logotype}.logo
                img(src="img/logo.png", alt="")

          .footer__phones
            p Без выходных: 8:00 - 22:00
            a.footer__phone(href="tel:+79780833358" rel="nofollow") +7 (978) 083-33-58
            p Горячая линия

          +socials

          .footer__payment
            .payment
              p.payment__title Принимаем к оплате:

              ul.payment__list
                li.payment__item
                  img(src="img/pay-icon.jpg", alt="" data-object-fit-contain)
                li.payment__item
                  img(src="img/svg/icons/mir.svg", alt="" data-object-fit-contain)
                li.payment__item
                  img(src="img/svg/icons/mastercard.svg", alt="" data-object-fit-contain)
                li.payment__item
                  img(src="img/svg/icons/visa.svg", alt="" data-object-fit-contain)

        .footer__menu
          ul.menu
            li.menu-item
              a(href="#") Клубная карта
            li.menu-item
              a(href="#") Наши магазины
            li.menu-item
              a(href="#") Поставщикам
            li.menu-item
              a(href="#") Акции
            li.menu-item
              a(href="#") Вакансии
            li.menu-item
              a(href="#") Бренды
            li.menu-item
              a(href="#") Обратная связь

        .footer__form
          .form.form--general.wpcf7
            form.wpcf7-form
              p.form__title Есть пожелания или жалобы?

              p.form__desc Оставьте сообщение в форме ниже

              .form__df
                .form__col
                  .form__item
                    span.wpcf7-form-control-wrap.your-name.text-input
                      input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                  .form__item
                    span.wpcf7-form-control-wrap.your-email.text-input
                      input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваш e-mail')

                .form__col
                  .form__item
                    span.wpcf7-form-control-wrap.your-message.text-input
                      textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false', placeholder="Сообщение")

              .form__item
                input.wpcf7-form-control.wpcf7-submit.btn.btn--red.btn--big(type='submit', value='Отправить')

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon

      // /.footer__top
    // /.container

    .footer__bottom
      .container
        .footer__bottom-df
          .footer__left
            .footer__copyright
              p.text г. Симферополь © Copyright  2020&nbsp;г.
            .footer__politics
              a.text(href="#") Политика конфиденциальности

          a.made(href="https://sheer82.ru/")
            span.text Сделано в
            svg.icon
              use(xlink:href='img/svg/sprite.svg#iconSheer')

        // /.row
      // /.container
    // /.footer__bottom
  // /.footer

