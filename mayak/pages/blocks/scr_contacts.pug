mixin scr_contacts()
  section.scr_contacts.contacts(id="scr_contacts")
    .container
      .contacts__df
        .contacts__col
          .contacts__item
            p.contacts__title Наш адрес:

            .contacts__text
              i.contacts__icon
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#icon-contact-1")
              span г. Ялта, ул. Пушкинская, 7а

            .contacts__text
              i.contacts__icon
                svg.icon.icon--mail
                  use(xlink:href="img/svg/sprite.svg#icon-contact-2")
              .contacts__text__wrap
                a(href="mailto:mayak-2014@list.ru" rel="nofollow") mayak-2014@list.ru
                a(href="mailto:info@mayakb.ru" rel="nofollow") info@mayakb.ru

            .contacts__text
              i.contacts__icon
                svg.icon.icon--vk
                  use(xlink:href="img/svg/sprite.svg#icon-contact-3")
              a(href="vk.com/mayak_security" rel="nofollow") vk.com/mayak_security

        .contacts__col
          .contacts__item
            p.contacts__title Телефоны:

            .contacts__text
              i.contacts__icon
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#icon-contact-4")
              a(href="tel:+79892388389" rel="nofollow") +7 989 238 83 89

            .contacts__text
              i.contacts__icon
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#icon-contact-5")
              a(href="viber://chat?number=79892388389" rel="nofollow") +7 989 238 83 89

          .contacts__item
            p.contacts__title Режим работы:

            .contacts__text
              i.contacts__icon
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#icon-contact-6")
              span Пн - Пт, 9:00 - 18:00
                br
                |  Сб - Вс, выходной

        .contacts__col.contacts__col--form
          .form.wpcf7.form--white
            form.wpcf7-form
              p.form__title Обратная связь

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ф.И.О.')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-user")

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-phone")

              .form__item
                span.wpcf7-form-control-wrap.your-message.text-input.text-input--icon
                  label(for="your-msg")
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-msg")
                    span.text Сообщение
                  textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false')

              .form__item.form__item--submit
                .btn__wrap
                  input.wpcf7-form-control.wpcf7-submit.btn.btn--grad(type='submit', value='Отправить')

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Даю согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Даю согласие на обработку персональных данных
                          i.accept__icon

    .contacts__map#inner-map(style="background: transparent url('img/map.jpg') no-repeat center center; background-size: cover;")


  // /.scr_contacts
