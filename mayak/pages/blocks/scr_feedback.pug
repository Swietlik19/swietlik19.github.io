mixin scr_feedback()
  section.scr_feedback.feedback(id="scr_feedback")
    h2.title-second
      strong Предложить свою кандидатуру

    .form.wpcf7.form--light
      form.wpcf7-form
        .form__df.form__df--two

          .form__col
            .form__item
              span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')
                i.input-icon
                  svg.icon
                    use(xlink:href="img/svg/sprite.svg#form-user")

            .form__item
              span.wpcf7-form-control-wrap.your-email.text-input.text-input--icon
                input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Эл. почта')
                i.input-icon
                  svg.icon
                    use(xlink:href="img/svg/sprite.svg#form-mail")

          .form__col
            .form__item
                span.wpcf7-form-control-wrap.your-message.text-input.text-input--icon
                  label(for="your-msg")
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-msg")
                    span.text Сообщение
                  textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false')

        .form__df.form__df--two.form__df--bottom
          .form__col
            .form__item
              span.wpcf7-form-control-wrap.accept
                span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                  span.wpcf7-list-item
                    label
                      input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                      span.wpcf7-list-item-label Согласие на обработку персональных данных
                        i.accept__icon

          .form__col
            .form__item.form__item--submit
              .btn__wrap
                input.wpcf7-form-control.wpcf7-submit.btn.btn--grad(type='submit', value='Отправить')


  // /.scr_feedback



