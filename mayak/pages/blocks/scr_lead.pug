mixin scr_lead()
  section.scr_lead.lead(id="scr_lead")
    .container
      .row
        .col-lg-5.col-md-6
          .lead__content
            .lead__img
              noscript
                img.lazy(src="img/img-lead.png" alt="Огнетушитель" width="312" height="405")
              img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img/img-lead.png" alt="Огнетушитель" width="312" height="405")

            p.lead__title Получите
              strong  полную инструкцию
              |  по&nbsp;подготовке к&nbsp;проверке
              strong  по&nbsp;пожарной безопасности

        .col-lg-4.offset-lg-3.col-md-5.offset-md-1
          .lead__form
            .form.form--grey.wpcf7
              form.wpcf7-form
                p.form__title Заполните форму и мы направим инструкцию вам на почту

                .form__item
                  span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ф.И.О.')
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-user")

                .form__item
                  span.wpcf7-form-control-wrap.your-email.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='E-mail')
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-mail")

                .form__item
                  span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')
                    i.input-icon
                      svg.icon
                        use(xlink:href="img/svg/sprite.svg#form-phone")

                .form__item.form__item--submit
                  .btn__wrap
                    input.wpcf7-form-control.wpcf7-submit.btn.btn--grad(type='submit', value='Отправить')

                .form__item
                  span.wpcf7-form-control-wrap.accept
                    span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                      span.wpcf7-list-item
                        label
                          input(type='checkbox', name='accept', value='Даю согласие на обработку персональных данных', checked='checked')
                          span.wpcf7-list-item-label Даю согласие на обработку персональных данных
                            i.accept__icon


  // /.scr_lead
