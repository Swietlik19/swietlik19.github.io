doctype html
html(lang='ru')
  head
    meta(charset="UTF-8")

    title  |

    meta(name='description', content='')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='format-detection', content='telephone=no')

    // Template Basic Images Start
    //- link(rel='icon', sizes='32x32', href='img/favicon/favicon-32x32.png')
    //- link(rel='icon', sizes='16x16', href='img/favicon/favicon-16x16.png')
    // Template Basic Images End

    // Custom Browsers Color Start
    meta(name='theme-color', content='#2d5266')
    // Custom Browsers Color End

    include blocks/scripts.pug
    include blocks/script-map.pug
    include blocks/styles.pug
    include blocks/socials.pug
    include blocks/header.pug
    include blocks/breadcrumbs.pug
    include blocks/paginator.pug
    include blocks/modal.pug
    include blocks/page-top.pug
    include blocks/page_catalog.pug

    include blocks/scr_about.pug
    include blocks/scr_works.pug
    include blocks/scr_brands.pug
    include blocks/scr_reviews.pug
    include blocks/scr_jobs.pug

    include blocks/footer.pug
    include blocks/socials.pug

    +styles

  body

    #page_wr.page_wr
      .page_df
        aside.page_left
          +page_top
          +page_catalog

        .page_right
          +header("a")
          +scr_about
          +scr_works
          +scr_brands
          +scr_reviews
          +scr_jobs
          +footer("a")

      a.to-top(href="#page_wr")
        svg.icon
          use(xlink:href="img/svg/sprite.svg#arrow")

    +modal__reviews
    +modal__add
    +modal__callback
    +scripts
    +script-map
