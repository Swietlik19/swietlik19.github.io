mixin scr_contacts()
  section.scr_contacts.contacts(id="scr_contacts")
    .container
      .contacts__df
        .contacts__col
          .contacts__content
            h3.contacts__title Адрес в Симферополе
            .contacts__text
              p
                b Симферополь:
                br
                |  Выставочный дом,
                br
                |  11 км Московского шоссе

              p
                b Телефон, Viber, WhatsApp:
                br
                a(href="tel:+79788911451" rel="nofollow")  +7 (978) 891-14-51,
                |  Василий Юрьевич

              p
                b Режим работы:
                |  с 9:00 до 19:00

          .contacts__map#contacts__map-0

        .contacts__col
          .contacts__content
            h3.contacts__title Адрес в Феодосии
            .contacts__text
              p
                b Феодосия:
                br
                |  ул. Чкалова, 86, литера Д
                br
                |  (напротив супермаркета Клевер)

              p
                b Телефон, Viber, WhatsApp:
                br
                a(href="tel:+79788911451" rel="nofollow")  +7 (978) 891-14-51,
                |  Василий Юрьевич

              p
                b Режим работы:
                |  с 9:00 до 19:00

          .contacts__map#contacts__map-1

        .contacts__form
          .form.form--general.wpcf7
            form.wpcf7-form
              p.form__title Оставить заявку
                br
                |  на встречу с архитектором

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

              .form__item
                span.wpcf7-form-control-wrap.your-place.text-input
                  input.wpcf7-form-control.wpcf7-text.wpcf7-place(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Место строительства')

              .form__item
                span.wpcf7-form-control-wrap.your-add.text-input
                  textarea.wpcf7-form-control.wpcf7-text.wpcf7-name(name='your-add', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Дополнительные сведения')

              .form__item.form__item--submit
                .btn__wrap.btn__wrap--orange
                  input.wpcf7-form-control.wpcf7-submit.xbtn.xbtn--grad(type='submit', value='Оставить заявку')

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon

      .contacts__bottom
        p.contacts__bottom-title Реквизиты
        .contacts__bottom-df
          .contacts__bottom-col
            p ИНН: 9108112267
              br
              |  КПП: 910801001
              br
              |  ОГРН: 1159102126776
              br
              |  ОКПО: 01004520

          .contacts__bottom-col
            p Расчетный счет: 40702810241530000114
              br
              |  Банк: РНКБ БАНК (ПАО)
              br
              |  БИК: 043510607
              br
              |  Корр. счет: 30101810335100000607

          .contacts__bottom-col
            p Юридический адрес: 298105,
              br
              |  Республика Крым, г. Феодосия,
              br
              |  Керченское шоссе 2В, оф., 1
              br
              |  Генеральный директор: Прикоп Василий Юрьевич

  // /.scr_contacts
