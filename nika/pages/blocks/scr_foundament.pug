                      .form__item
                        span.wpcf7-form-control-wrap.your-material.text-input
                          input.wpcf7-form-control.wpcf7-text.wpcf7-material(type='text', name='your-material', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Материал стен')

                      .form__df
                        .form__item
                          span.wpcf7-form-control-wrap.your-stages.text-input
                            input.wpcf7-form-control.wpcf7-text.wpcf7-stages(type='number', name='your-stages', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Этажность')

                        .form__item
                          span.wpcf7-form-control-wrap.your-width.text-input
                            input.wpcf7-form-control.wpcf7-text.wpcf7-width(type='number', name='your-width', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ширина')

                        .form__item
                          span.wpcf7-form-control-wrap.your-length.text-input
                            input.wpcf7-form-control.wpcf7-text.wpcf7-length(type='number', name='your-length', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Длина')

                      .form__item
                        span.wpcf7-form-control-wrap.your-place.text-input
                          input.wpcf7-form-control.wpcf7-text.wpcf7-place(type='text', name='your-place', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Местоположение участка')

                      .form__item
                        span.wpcf7-form-control-wrap.your-name.text-input
                          input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                      .form__item
                        span.wpcf7-form-control-wrap.your-tel.text-input
