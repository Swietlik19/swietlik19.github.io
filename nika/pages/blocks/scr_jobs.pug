mixin scr_jobs()
  section.scr_jobs.jobs(id="scr_jobs")
    .container
      .section_wr
        h1.page-title--second Вакансии

        .jobs__df
          .jobs__main
            +scr_faq--jobs

          aside.jobs__right
            ul.jobs__feat
              li
                .jobs__feat-item
                  .jobs__feat-icon
                    img(src="img/svg/icons/wallet.svg" alt="")
                  .jobs__feat-title
                    p Стабильная заработная плата
              li
                .jobs__feat-item
                  .jobs__feat-icon
                    img(src="img/svg/icons/graph.svg" alt="")
                  .jobs__feat-title
                    p Возможность карьерного роста
              li
                .jobs__feat-item
                  .jobs__feat-icon
                    img(src="img/svg/icons/sketch.svg" alt="")
                  .jobs__feat-title
                    p Масштабные проекты
              li
                .jobs__feat-item
                  .jobs__feat-icon
                    img(src="img/svg/icons/document.svg" alt="")
                  .jobs__feat-title
                    p Официальное оформление
              li
                .jobs__feat-item
                  .jobs__feat-icon
                    img(src="img/svg/icons/builder.svg" alt="")
                  .jobs__feat-title
                    p Крепкая команда и&nbsp;справедливое руководство
              li
                .jobs__feat-item
                  .jobs__feat-icon
                    img(src="img/svg/icons/compass.svg" alt="")
                  .jobs__feat-title
                    p Непрерывное корпоративное обучение

            .jobs__form
              .form.form--general.wpcf7
                form.wpcf7-form
                  p.form__title Форма для отправки резюме
                  p.form__desc Пожалуйста, впишите желаемую должность

                  .form__item
                    span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                      input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                  .form__item
                    span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                      input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

                  .form__item
                    span.wpcf7-form-control-wrap.your-vacancy.text-input.text-input--icon
                      input.wpcf7-form-control.wpcf7-text.wpcf7-vacancy(type='text', name='your-vacancy', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Желаемая должность')

                  .form__item
                    span.wpcf7-form-control-wrap.your-file
                      label(tabindex="0")
                        input(type="file" name="your-file" size="40" class="wpcf7-form-control wpcf7-file wpcf7-validates-as-required wpcf7-resume" accept=".jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.ppt,.pptx,.odt,.avi,.ogg,.m4a,.mov,.mp3,.mp4,.mpg,.wav,.wmv" aria-required="true" aria-invalid="false")
                        span.sl Прикрепить резюме

                  .form__item.form__item--submit
                    .btn__wrap.btn__wrap--orange
                      input.wpcf7-form-control.wpcf7-submit.xbtn.xbtn--grad(type='submit', value='Отправить')

                  .form__item
                    span.wpcf7-form-control-wrap.accept
                      span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                        span.wpcf7-list-item
                          label
                            input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                            span.wpcf7-list-item-label Согласие на обработку персональных данных
                              i.accept__icon

  // /.scr_jobs
