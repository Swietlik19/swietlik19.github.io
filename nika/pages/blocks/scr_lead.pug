mixin scr_lead()
  section.scr_lead.lead(id="scr_lead")
    .container
      .lead__content
        .lead__img
          img(src="img/lead-img.png" alt="" data-object-fit-contain)

        p.lead__title
          b Хотите посмотреть на
            strong.accent  наш авторский каталог проектов
            |  с ценами и примерами строительства?
          |  Напишите почту и мы его Вам отправим!

        .form.wpcf7
          form.wpcf7-form
            p.form__title Заполните форму и получите наш каталог с ТОП-проектами

            .form__wrap
              span.wpcf7-form-control-wrap.your-email.text-input
                input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваш e-mail')

              .btn__wrap.btn__wrap--orange
                input.wpcf7-form-control.wpcf7-submit.xbtn.xbtn--grad(type='submit', value='Скачать каталог')

            .form__item
              span.wpcf7-form-control-wrap.accept
                span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                  span.wpcf7-list-item
                    label
                      input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                      span.wpcf7-list-item-label Согласие на обработку персональных данных
                        i.accept__icon

  // /.scr_lead

mixin scr_lead--2()
  section.scr_lead.lead.lead--2(id="scr_lead")
    .container
      .lead__content
        .lead__img
          img(src="img/lead-img-2.png" alt="" data-object-fit-contain)

        .lead__df
          p.lead__title
            b Есть свой эскиз или нужен
              strong.accent  бесплатный
              |  индивидуальный проект?
            |  Заполните форму - наш архитектор свяжется с Вами для уточнения всех деталей

          .lead__form
            .form.form--general.wpcf7
              form.wpcf7-form
                p.form__title Оставьте заявку и мы свяжемся с Вами в течение 15 минут

                .form__item
                  span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                .form__item
                  span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                    input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

                .form__item.form__item--submit
                  .btn__wrap.btn__wrap--orange
                    input.wpcf7-form-control.wpcf7-submit.xbtn.xbtn--grad(type='submit', value='Отправить')

                .form__item
                  span.wpcf7-form-control-wrap.accept
                    span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                      span.wpcf7-list-item
                        label
                          input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                          span.wpcf7-list-item-label Согласие на обработку персональных данных
                            i.accept__icon

  // /.scr_lead
