              .production__gallery
                .production__gallery-slider#production__gallery-slider
                  .swiper-wrapper
                    .swiper-slide
                      a.production__gallery-item.fancybox(href="img-temp/production-img.jpg" style="background: transparent url('../img-temp/production-img.jpg') no-repeat center center; background-size: cover;")
                        span.production__gallery-text Гидравлический пресс

                    .swiper-slide
                      a.production__gallery-item.fancybox(href="img-temp/production-img.jpg" style="background: transparent url('../img-temp/production-img-2.jpg') no-repeat center center; background-size: cover;")
                        span.production__gallery-text Производственная линия

                    .swiper-slide
                      a.production__gallery-item.fancybox(href="img-temp/production-img.jpg" style="background: transparent url('../img-temp/production-img-2.jpg') no-repeat center center; background-size: cover;")
                        span.production__gallery-text Производственная линия

                .production__gallery-btns
                  button.swiper-button-prev
                  .swiper-dots
                  button.swiper-button-next

  // /.scr_production
