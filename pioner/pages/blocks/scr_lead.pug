mixin scr_lead()
  section.scr_lead.lead(id="scr_lead")
    .container
      .lead__df
        .lead__content
          .lead__img
            img(src="img/lead-img.png" alt="")

          p.lead__title Получите
            span.accent  презентацию
            br
            |  о проекте и финансовую
            br
            |  модель доходного дома
            br
            |  за 1 минуту

        .lead__form
          .form.wpcf7
            form.wpcf7-form
              p.form__title Заполните форму и получите на почту PDF

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-user")

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Телефон')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-tel")

              .form__item
                span.wpcf7-form-control-wrap.your-email.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='E-mail')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-email")

              .form__item.form__item--submit
                .btn__wrap.btn__wrap--red
                  input.wpcf7-form-control.wpcf7-submit.xbtn.xbtn--red(type='submit', value='Получить материалы на почту')

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon

  // /.scr_lead

