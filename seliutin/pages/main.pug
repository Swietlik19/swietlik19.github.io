        25% {
          -webkit-filter: drop-shadow(0px 0px 30px #03b5f7) drop-shadow(0px 0px 20px rgba(3, 181, 247, 0.5));
                  filter: drop-shadow(0px 0px 30px #03b5f7) drop-shadow(0px 0px 20px rgba(3, 181, 247, 0.5));
