    // Template Basic Images End

    // Custom Browsers Color Start
    meta(name='theme-color', content='#0094da')
    // Custom Browsers Color End

    include blocks/scripts.pug
    //- include blocks/script-map.pug
    include blocks/styles.pug
    include blocks/header.pug

    include blocks/scr1.pug
    include blocks/scr_prod.pug
    include blocks/scr_tariff.pug
    include blocks/scr_pay.pug
    include blocks/scr_blog.pug
    include blocks/scr_write.pug

    include blocks/footer.pug
    include blocks/socials.pug

    link(rel='preconnect', href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700;800&display=swap', rel='stylesheet')

    +styles

  body

    +header("div")

    #page_wr.page_wr
      +scr1
      +scr_prod
      +scr_tariff
      +scr_pay
      +scr_blog
      +scr_write

      a.to-top(href="#page_wr")
        svg.icon
          use(xlink:href="img/svg/sprite.svg#arrow")

    +footer("div")

    +scripts
