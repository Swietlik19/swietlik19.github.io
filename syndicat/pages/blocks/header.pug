mixin header(logotype)
  header.header(id="header")
    +nav

    .header__middle
      .header__main
        .container
          .row
            .col-md-4
              .header__phones
                a.link(href="tel:+79787876767") +7 (978)
                  strong  787-67-67
                span.text Whatsapp / Viber

            .col-md-4
              .logo__wrap
                if logotype == "a"
                  #{logotype}.logo(href="index.html")
                    img(src="img/logo.png" alt="лого")
                else
                  #{logotype}.logo
                    img(src="img/logo.png" alt="лого")
                p.logo__text Магазин корейской косметики

            .col-md-4
              .header__search
                .form.form--search
                  form.wpcf7-form
                    button.open-search(type='button')
                      svg.icon
                        use(xlink:href='img/svg/sprite.svg#icon-search')
                    .search-wrap
                      .text-input
                        input(type='search', placeholder='Поиск по товарам')
                      button(type='submit')
