mixin modal__login()
  section.modal.modal__login(id="modal-login")
    .modal-login__content.modal__content
      button.close

      .form.wpcf7.form--main
        form.wpcf7-form

          ul.login__nav
            li.login__nav-item
              a.login__nav-link.active(href="#login-tabs-0") Войти
            li.login__nav-item
              a.login__nav-link(href="#login-tabs-1") Зарегистрироваться

          .login__tabs
            .login__tab.active#login-tabs-0

              .login__via
                span.text Войти через
                +socials--modal

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')
                  span.icon__wrap
                    img.icon(src="img/icon-form-email.png" alt="Иконка-конверт" data-object-fit-contain)

              .form__item
                span.wpcf7-form-control-wrap.your-password.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Пароль')
                  span.icon__wrap
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#icon-form-pass")

              .form__item
                .submit__wrap
                  .btn__wrap
                    input.wpcf7-form-control.wpcf7-submit(type='submit', value='Войти')

              a.login__forget(href="#") Забыли пароль

      // /. form
    // /. login__content
  // /. modal__login
