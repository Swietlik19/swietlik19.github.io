mixin scr_lead()
  section.scr_lead.lead.grey-bg(id="scr_lead")
    .container
      .lead__df
        .lead__title
          p
            strong Получите бесплатную консультацию эксперта по строительству ангаров,
            |  который
            span.accent  возвел более 50&nbsp;объектов
            |  в Республике Крым

        .lead__form
          .form.wpcf7
            form.wpcf7-form
              p.form__title Оставьте номер телефона и эксперт свяжется с Вами в течение часа

              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-user")

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Телефона')
                  i.input-icon
                    svg.icon
                      use(xlink:href="img/svg/sprite.svg#form-tel")

              .form__item.form__item--submit
                .btn__wrap.btn__wrap--yellow
                  input.wpcf7-form-control.wpcf7-submit.btn.btn--yellow(type='submit', value='Получить бесплатную консультацию')

              .form__item
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Согласие на обработку персональных данных
                          i.accept__icon

  // /.scr_lead
