mixin scr_lead()
  section.scr_lead.lead(id="scr_lead")
    .container
      .lead__content
        p.title Если ветерану нужна помощь, сообщите нам об этом

        .form.wpcf7
          form.wpcf7-form
            .form__df
              .form__col

                .form__item
                  span.wpcf7-form-control-wrap.your-name.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Имя')

                .form__item
                  span.wpcf7-form-control-wrap.your-tel.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

                .form__item
                  span.wpcf7-form-control-wrap.your-email.text-input
                    input.wpcf7-form-control.wpcf7-text.wpcf7-email(type='email', name='your-email', value='', size='40', aria-required='true', aria-invalid='false', placeholder='E-mail')

              .form__col
                .form__item
                  span.wpcf7-form-control-wrap.your-message.text-input
                    textarea.wpcf7-form-control.wpcf7-text.wpcf7-message#your-msg(name='your-message', cols="40", rows="10", aria-required='true', aria-invalid='false', placeholder='Описание заявки')

            .form__df
              .form__col
                .form__item
                  span.accept Нажимая на кнопку, я даю согласие
                    br
                    span  на обработку персональных данных

              .form__col
                .form__item
                  .btn__wrap
                    input.wpcf7-form-control.wpcf7-submit.btn.btn--red(type='submit', value='Отправить заявку')

  // /.scr_lead

