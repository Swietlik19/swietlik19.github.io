    script.
      (function($){
        $('.veterans__scale-range').each(function() {
          var xMin = $(this).siblings('.veterans__scale-min').val();
          var xMax = $(this).siblings('.veterans__scale-max').val();
          var xCurr = $(this).siblings('.veterans__scale-curr').val();
          $('#' + $(this).attr('id')).ionRangeSlider({
            min: xMin,
            max: xMax,
            from: xCurr,
            block: true,
          });
        });
      })(jQuery);
