                  noscript
                    img.lazy(src="img-temp/prod/img-4.jpg" alt="" width="125" height="90")
                  img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img-temp/prod/img-4.jpg" alt="" width="125" height="90")

