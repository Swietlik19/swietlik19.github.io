mixin scr_steps()
  section.scr_steps.steps(id="scr_steps")
    .container
      h2.title Как получить займ?

      ul.steps__list
        li.steps__item
          span.steps__num 1
          p.steps__text Оставляете&nbsp;
            br
            a(href="#") online-заявку
        li.steps__item
          span.steps__num 2
          p.steps__text В течение 5 минут с вами свяжется
            br
            |  менеджер для обсуждения деталей
        li.steps__item
          span.steps__num 3
          p.steps__text Приезжаете в наш офис
            br
            |  для подписания договора
        li.steps__item
          span.steps__num 4
          p.steps__text Получаете деньги

  // /.scr_steps

mixin scr_steps--investor()
  section.scr_steps.steps.steps--investor(id="scr_steps")
    .container
      h2.title Как стать инвестором

      ul.steps__list.steps__list--three
        li.steps__item
          span.steps__num 1
          h3.steps__title
            a(href="#") Оставьте заявку
          p.steps__text Наши сотрудники оперативно с Вами
            br
            |  свяжутся и расскажут об условиях
        li.steps__item
          span.steps__num 2
          h3.steps__title Заключите договор
          p.steps__text Приезжайте к нам в офис
            br
            |  для подписания договора
        li.steps__item
          span.steps__num 3
          h3.steps__title Переведите деньги
          p.steps__text Отправьте денежные средства
            br
            |  банковским переводом на р/с
            br
            |  ООО МКК «Кубань Бауман Кэш»

  // /.scr_steps
