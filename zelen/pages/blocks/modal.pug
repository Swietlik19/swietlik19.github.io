mixin modal__order()
  section.modal.modal__order(id="modal__order")
    .modal__content
      button.close

      .form.wpcf7
        form.wpcf7-form
          p.form__title Оставьте заявку и получите
            br
            |  любой товар
            span.green  бесплатно
            br
            |  для дегустации

          p.form__desc Предложение действительно как для
            br
            |  частных так и для юридических лиц

          .form__item
            span.wpcf7-form-control-wrap.your-name.text-input.text-input--icon
              input.wpcf7-form-control.wpcf7-text.wpcf7-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')
              i.input-icon
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#form-user")

          .form__item
            span.wpcf7-form-control-wrap.your-tel.text-input.text-input--icon
              input.wpcf7-form-control.wpcf7-text.wpcf7-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ваше имя')
              i.input-icon
                svg.icon
                  use(xlink:href="img/svg/sprite.svg#form-phone")

          .form__item.form__item--submit
            .btn__wrap.btn__wrap--green
              input.wpcf7-form-control.wpcf7-submit.btn(type='submit', value='Отправить')

          .form__item
            span.wpcf7-form-control-wrap.accept
              span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                span.wpcf7-list-item
                  label
                    input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                    span.wpcf7-list-item-label Согласие на обработку персональных данных
                      i.accept__icon


      // /. form
    // /. modal__content
  // /. modal


mixin modal__prod()
  section.modal.modal__prod(id="modal__prod")
    .modal__content
      button.close

      .modal__prod-wrap

        p.modal__prod-title.mobile Рукола

        .modal__prod-df
          .modal__prod-slider
            #modal__prod-slider
              .swiper-wrapper
                .swiper-slide.modal__prod-item
                  img(src="img-temp/modal-img.jpg" alt="" width="125" height="90" data-object-fit-cover)
                .swiper-slide.modal__prod-item
                  img(src="img-temp/modal-img.jpg" alt="" width="125" height="90" data-object-fit-cover)

            .modal__prod-nav
              button.swiper-button-prev
              .swiper-dots
              button.swiper-button-next

          .modal__prod-content
            h1.modal__prod-title.desktop Рукола

            .catalog__content-item
              p
                strong Срез
                |  (контейнер)

              table
                tr
                  td
                    span 50 г
                  td
                    span
                      strong 80 Р
                tr
                  td
                    span 100 г
                  td
                    span
                      strong 150 Р
                tr
                  td
                    span 500 г
                  td
                    span
                      strong 700 Р
                tr
                  td
                    span 1000 г
                  td
                    span
                      strong 1200 Р

            .catalog__content-item
              p
                strong Растущая
                |  (бокс)
              table
                tr
                  td
                    span 1 шт
                  td
                    span
                      strong 120 Р

            .modal__prod-btn
              .btn__wrap.btn__wrap--green
                a.btn.open-modal(href="#modal__order") Купить

        .modal__prod-desc
          .article
            p Рукола ценится за своеобразное сочетание эфирных масел, витаминов, каротина и минеральных веществ. Ростки руколы - природный источник йода и витамина С. Весьма интенсивно влияет на обмен веществ в организме, способствует выведению холестерина и повышению уровня гемоглобина. Ароматичность и легкий орехово-горчичный вкус делают ее популярной в качестве пикантного гарнира к мясным, рыбным блюдам, как добавки в салаты из овощей, фруктов, сыра, морепродуктов.

    // /. modal__content
  // /. modal
