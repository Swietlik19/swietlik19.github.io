mixin scr_lead()
  section.scr_lead.lead(id="scr_lead")

    .container
      .lead__form
        .lead__img
          noscript
            img.lazy(src="img/lead-img.jpg" alt="" width="125" height="90" data-object-fit-cover-left)
          img.lazy( src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="img/lead-img.jpg" alt="" width="125" height="90" data-object-fit-cover-left)

        h2.page-title Получите бесплатную консультацию от опытного специалиста с десятилетним стажем в испытаниях прочности бетона

        .page-desc
          p Оставьте номер телефона и специалист свяжется с Вами в течение часа

        .form.form--general.wpcf7
          form.wpcf7-form
            .form__df
              .form__item
                span.wpcf7-form-control-wrap.your-name.text-input
                  label(for="your-name") Ваше имя
                  input.wpcf7-form-control.wpcf7-text.wpcf7-name#your-name(type='text', name='your-name', value='', size='40', aria-required='true', aria-invalid='false', placeholder='Ф. И. О.')

              .form__item
                span.wpcf7-form-control-wrap.your-tel.text-input
                  label(for="your-tel") Телефон
                  input.wpcf7-form-control.wpcf7-text.wpcf7-tel#your-tel(type='tel', name='your-tel', value='', size='40', aria-required='true', aria-invalid='false', placeholder='+7 (___) ___-__-__')

            .form__df.form__df--center
              .form__accept
                span.wpcf7-form-control-wrap.accept
                  span.wpcf7-form-control.wpcf7-checkbox.wpcf7-validates-as-required
                    span.wpcf7-list-item
                      label
                        input(type='checkbox', name='accept', value='Согласие на обработку персональных данных', checked='checked')
                        span.wpcf7-list-item-label Я согласен с политикой конфиденциальности
                          i.accept__icon

              .form__btns
                input.wpcf7-form-control.wpcf7-submit.btn.btn--orange(type='submit', value='Отправить')


  // /.scr_lead
